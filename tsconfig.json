{
	"include": ["src/**/*.ts", "src/**/*.tsx", "testutil/**/*.ts", "./*.d.ts"],
	"compilerOptions": {
		"lib": ["ES5", "ES6", "ES7"],
		"target": "ES2020",
		"module": "CommonJS",

		"outDir": "./dist",
		"declarationDir": "./dist",
		"declaration": true,

		"noImplicitAny": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		// "isolatedModules": true, // FIXME: Re-enable me
		"strictNullChecks": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"#testutil/jsx/jsx-runtime": ["./testutil/jsx-runtime.ts"],
			"#testutil/*": ["./testutil/*"],
			"#runtime": ["./src/runtime/util.ts"],
			"#util": ["./src/util.ts"]
		},

		// For running tests
		"jsxImportSource": "#testutil/jsx",
		"jsx": "react-jsx"
	}
}
